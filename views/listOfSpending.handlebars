<!doctype html>

<html>
 <head>
    <title>List Of Spending</title>


  <meta name = "viewport" content="device-width, initial-scale=1.0">
  <link href="css/bootstrap.css" rel="stylesheet">
  <link href="css/bootstrap-theme.css" rel="stylesheet">
  <link href="css/menuButton.css" rel="stylesheet">
  <link href="css/style.css" rel="stylesheet">


 </head>

<body>

<div>
<div style = "float:left;" class = "dropdown">
    <image onclick="menu()" class = "dropbtn" src="images/settingsIcon.jpg"></image>
    <div id = "drop" class = "dropdown-content">
      <a href = "/Home">Home</a>
      <a href = "/listOfSpending">List of Spending</a>
      <a href = "#">Spending Overview</a>
      <a href = "/budget">Budget</a>
    </div>
</div>
<div style = "float:right;" class = "">
  <a href="#" id = "button" class = "button">Add Expense</a>
</div>
</div>

<div class="container" id="table">
    <table id = "table1">
      <thead>
        <tr>
          <th>Date</th>
          <th>Name</th>
          <th>Category</th>
          <th>Price</th>
        </tr>
      </thead>

      <tbody>
      	{{#each purchase}}
      	<div class = "purchases">
        	<tr>
          	<td><img id = "remove" src="images/xIcon.png"></img>{{date}}</td>
          	<td>{{name}}</td>
          	<td>{{category}}</td>
          	<td>{{price}}</td>
        	</tr>
    	</div>
        {{/each}}

      </tbody>
    </table>
</div>

<div class = "bg-modal">
  <div class = "modal-content">
    <div class = "close">+</div>
    <form action = "">
      <input type = "text" placeholder="Date">
      <input type = "text" placeholder="Name">
      <input type = "text" placeholder="Category">
      <input type = "text" placeholder="Price">
      <a href="" id = "add" class = "button">Confirm</a>
    </form>
  </div>
</div>

  <script src="./js/jquery-1.11.0.js"></script>
  <script src="./js/bootstrap.js"></script>
  <script src="./js/menuButton.js"></script>
  <script src="./routes/listOfSpending.js"></script>
  <script src="./routes/index.js"></script>

</body>
</html>
